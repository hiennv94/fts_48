<% provide :title, t("users.title.home") %>
<div class="row">
  <div class="col-md-12 col-md-offset-0">
    <table class="table">
      <thead>
        <tr>
          <th class="number_id"><%= t "users.table.stt" %></th>
          <th class="user-mail"><%= t "users.table.mail" %></th>
          <th class="total-exam"><%= t "users.table.total_exams" %></th>
          <th class="complete-exam"><%= t "users.table.complete" %></th>
          <th class="uncomplete-exam"><%= t "users.table.uncomplete" %></th>
          <th class="view-detail"><%= t "users.table.viewdetail" %></th>
          <th class="action"><%= t "users.table.delete" %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.email %></td>
            <td><span class="label label-primary"><%= user.exams.size %></span></td>
            <td><span class="label label-success"><%= user.exams.checked.size %></span></td>
            <td><span class="label label-warning"><%= user.exams.checking.size %></span></td>
            <td><span class="btn btn-primary viewdetail"><%= link_to t("users.table.view"), [:admin, user] %></span></td>
            <td><%= link_to t("delete"), [:admin, user], method: :delete, data: {confirm: t("application.general.confirm_delete")}, class: "btn btn-danger glyphicon glyphicon-trash btn-width" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>
