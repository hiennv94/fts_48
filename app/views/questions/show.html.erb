<h2><b><%= t ".title" %></b></h2>
<div class="row col-md-offset-3">
  <table class="table borderless">
    <tbody>
      <tr>
        <td class="title"><%= t ".content" %></td>
        <td><%= @question.content %></td>
      </tr>
      <tr>
        <td class="title"><%= t ".option" %></td>
        <td>
          <table id="table-show-render">
            <% @answers.each do |answer| %>
              <tr>
                <% if answer.is_correct? %>
                  <td>
                    <span class="label label-primary">Correct</span>
                  </td>
                <% else %>
                  <td>
                    <span class="label label-danger">wrong</span>
                  </td>
                <% end %>
                <td><%= answer.content %></td>
              </tr>
            <% end %>
          </table>
        </td>
      </tr>
      <tr>
        <td class="title"><%= t "question.index.subject" %></td>
        <td><%= @question.subject.name %></td>
      </tr>
      <tr>
        <td class="title"><%= t ".question_type" %></td>
        <td><div><%= @question.question_type %></div></td>
      </tr>
      <tr>
        <td class="title"><%= t "question.index.state" %></td>
        <td><div class="state-label label label-warning"><%= @question.status %></div></td>
      </tr>
      <tr>
        <td>
          <%= link_to edit_user_question_path(current_user, @question) do %>
            <i class="btn btn-primary glyphicon glyphicon-pencil btn-width"><%= t ".btn_edit" %></i>
          <% end %>
          <%= link_to user_question_path(current_user, @question),
            method: :delete, data: {confirm: "are you sure?"} do %>
            <i class="btn btn-danger glyphicon glyphicon-trash btn-width"><%= t ".btn_del" %></i>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
