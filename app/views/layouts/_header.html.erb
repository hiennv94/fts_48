<header class="navbar navbar-fixed-top navbar-inverse" id="navigator">
  <div class="container">
    <%= link_to t("application.general.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("application.general.home"), root_path %></li>
            <li><%= link_to t("application.general.exam"), admin_exams_path %></li>
            <li><%= link_to t("application.general.user"), admin_users_path %></li>
            <li><%= link_to t("application.general.question"), admin_questions_path %></li>
            <li><%= link_to t("application.general.subject"), admin_subjects_path %></li>
          <% end %>
          <% if current_user.normal? %>
            <li><%= link_to t("application.general.home"), exams_path %></li>
            <li><%= link_to t("application.general.contributte"), user_questions_path(current_user) %></li>
          <% end %>
          <li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "application.general.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.normal? %>
                <li><%= link_to t("application.general.profile"), edit_user_registration_path %></li>
              <% end %>
              <% if current_user.admin? %>
                <li><%= link_to t("application.general.activity_log"),  admin_activities_path %></li>
                <li><%= link_to t("application.general.profile"),  edit_user_registration_path %></li>
              <% end %>
              <li>
                <%= link_to t("application.general.logout"), destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("application.general.home"), root_path %></li>
          <li><%= link_to t("users.sign_up.title"), new_user_registration_path %></li>
          <li><%= link_to t("users.sign_in.title"), new_user_session_path %></li>
        <% end %>
  </div>
 </header>
