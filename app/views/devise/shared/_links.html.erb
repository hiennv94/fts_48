<%- if controller_name != "sessions" %>
  <%= link_to t("users.sign_in.title"), new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != "registrations" %>
  <%= link_to t("users.sign_up.title"), new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
  <%= link_to t("users.password.forgot_pw"), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != "confirmations" %>
  <%= link_to t("users.password.confirm"), new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != "unlocks" %>
  <%= link_to t("users.password.unlock"), new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t("user.password.sign_in_with #{OmniAuth::Utils.camelize(provider)}"),
    user_omniauth_authorize_path(provider) %><br />
  <% end -%>
<% end -%>
